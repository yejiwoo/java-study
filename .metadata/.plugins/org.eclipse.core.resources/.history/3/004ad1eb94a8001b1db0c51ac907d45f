package returnLine;

public class Car {
	
	//filed
	int gas;
	
	//constructor
	
	//method
	public void setGase(int gas) {
		this.gas=gas;
	}
	
	public boolean isLeftGas() {
		if(gas==0) {
			System.out.println("gas가 없습니다");
			return false;
		}
		System.out.println("gas가 있습니다");
		return true;
	}
	
	public void run() {
		while(true) {
			if(gas>0) {
				System.out.println("달립니다.(gas잔량:"+gas+")");
				gas--;
			}else {
				System.out.println("멈춥니다.(gas잔량:"+gas+")");
				return; // 메서드 실행 종료
			}
		}
	}
	
}
